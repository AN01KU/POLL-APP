<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090909"
    tools:context=".ViewStudentInfo">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="245dp"
        android:layout_height="49dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/roundtf"
        android:gravity="center"
        android:paddingStart="10sp"
        android:textAlignment="viewStart"
        android:textColor="#090909"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView100"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/roundtf"
        android:gravity="center"
        android:paddingStart="10sp"
        android:textAlignment="viewStart"
        android:textColor="#090909"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView101"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

    <TextView
        android:id="@+id/prnTextView"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/roundtf"
        android:gravity="center"
        android:paddingStart="10sp"
        android:textAlignment="viewStart"
        android:textColor="#090909"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView102"
        app:layout_constraintTop_toBottomOf="@+id/emailTextView" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="285dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:text="Student Details"
        android:textAlignment="center"
        android:textColor="#F32C2C"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/pollsCreatedListView"
        style="@android:style/Widget.Material.Light.ListView"
        android:layout_width="370dp"
        android:layout_height="260dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="#090909"
        android:divider="@drawable/mainscreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="283dp"
        android:layout_height="60dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="87dp"
        android:text="Polls Created"
        android:textAlignment="center"
        android:textColor="#30B4C8"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prnTextView" />

    <TextView
        android:id="@+id/textView100"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="NAME:"
        android:textAlignment="center"
        android:textColor="#FB9B9B"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView101"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Email:"
        android:textAlignment="center"
        android:textColor="#FB9B9B"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView100" />

    <TextView
        android:id="@+id/textView102"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="PRN:"
        android:textAlignment="center"
        android:textColor="#FB9B9B"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView101" />

</androidx.constraintlayout.widget.ConstraintLayout>