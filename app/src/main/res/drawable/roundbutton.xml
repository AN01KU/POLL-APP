<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#1894F6" />
            <gradient android:angle="-45" android:startColor="#FA1C36" android:endColor="#2FA5F3" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#0D47A1" />
            <solid android:color="#0D47A1"/>
            <gradient android:angle="-90" android:startColor="#FA1C36" android:endColor="#2FA5F3" />

        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#164EA5" />
            <gradient android:angle="-90" android:startColor="#FA1C36" android:endColor="#2FA5F3" />
        </shape>
    </item>
</selector>