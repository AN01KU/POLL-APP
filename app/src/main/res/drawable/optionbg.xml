<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="3dip" android:color="#030609" />
            <gradient android:angle="-90" android:startColor="#22F1F8" android:endColor="#A7D2EF" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="3dip" android:color="#050505" />
            <solid android:color="#E6E7E8"/>
            <gradient android:angle="-90" android:startColor="#22F1F8" android:endColor="#A7D2EF" />

        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >

            <stroke android:width="3dip" android:color="#070707" />
            <gradient android:angle="-90" android:startColor="#22F1F8" android:endColor="#A7D2EF" />
        </shape>
    </item>
</selector>